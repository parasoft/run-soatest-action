{
  "name": "run-soatest-action",
  "version": "1.0.0",
  "description": "A GitHub Action for running functional tests with Parasoft SOAtest and reviewing results.",
  "main": "lib/main.js",
  "scripts": {
    "compile": "npx tsc -p ./",
    "watch": "npx tsc -watch -p ./",
    "lint": "npx eslint . --ext .ts -f checkstyle -o eslint/eslint-report.xml || true",
    "test": "echo \"Error: no test specified\" && exit 1",
    "merge-licenses": "node ./merge-licenses.js",
    "copy-files": "copyfiles --flat ./src/messages/*.json ./dist/messages && copyfiles --flat ./data/*.xsl ./dist && copyfiles --up 1 ./data/SaxonHE12-2J/**/* ./dist",
    "package": "ncc build --license licenses.txt && npm run copy-files && npm run merge-licenses",
    "clean": "rimraf ./dist ./lib ./eslint",
    "all": "npm run clean && npm run compile && npm run lint && npm run package && npm run compile-xsl",
    "compile-xsl": "node node_modules/xslt3/xslt3.js -t -xsl:./dist/soatest-xunit.xsl -export:./dist/soatest-xunit.sef.json -nogo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parasoft/run-soatest-action.git"
  },
  "author": "Parasoft Corp.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/parasoft/run-soatest-action/issues"
  },
  "homepage": "https://github.com/parasoft/run-soatest-action#readme",
  "dependencies": {
    "saxon-js": "^2.6.0",
    "string-format": "2.0.0"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@types/node": "^16.18.11",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "copyfiles": "^2.4.1",
    "xslt3": "^2.6.0"
  }
}
